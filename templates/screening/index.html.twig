{% extends 'base.html.twig' %}

{% block title %}Screening index{% endblock %}

{% block body %}
    <h1>Screening index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Start Date</th>
                <th>Price</th>
                <th>Movies</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for screening in screenings %}
            <tr>
                <td>{{ screening.id }}</td>


                {#<td>{{ screening.date ? screening.date|date('Y-m-d') : '' }}</td>#}
                {#<td>{{ screening.date ? screening.date|date('H:i:s') : '' }}</td>#}

                <td>{{ screening.startDate ? screening.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ screening.price}}</td>
                <td>
                    {% for movie in screening.movies %}
                        <a href="{{ path('movie_show', {'id': movie.id}) }}">{{movie.title}}</a><br>
                    {% endfor %}
                </td>

                <td>
                    <a href="{{ path('screening_show', {'id': screening.id}) }}">show</a>
                    <a href="{{ path('screening_edit', {'id': screening.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('screening_new') }}">Create new</a>
{% endblock %}