{% extends 'base.html.twig' %}

{% block title %}Filmy{% endblock %}

{% block body %}
    <section class="admin_area">
        <h1 class="admin_area__heading">Lista filmów</h1>

        <table class="table table-responsive">
            <thead>
            <tr>
                <th>Id</th>
                <th>Tytuł</th>
                <th>Wymagany wiek</th>
                {#<th>Krótki opis</th>#}
                <th>Czas trwania</th>
                <th>Kategoria</th>
                <th>Ocena</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            {% for movie in movies %}
                <tr>
                    <td>{{ movie.id }}</td>
                    <td><a class="admin_area__highlighted_element" href="{{ path('movie_show', {'id': movie.id}) }}">{{ movie.title }}</a></td>
                    <td>{{ movie.age }}</td>
                    {#<td>{{ movie.description|length > 100 ? movie.description|slice(0, 100) ~ '...' : movie.description }}</td>#}
                    <td>{{ movie.time|date("H:i") }}</td>
                    <td>{{ movie.category }}</td>
                    <td>{{ movie.grade }}</td>
                    <td>
                        <a class="btn btn-outline-blue" href="{{ path('movie_edit', {'id': movie.id}) }}">Edytuj <i class="fa fa-edit" aria-hidden="true"></i></a>
                        <a class="btn btn-outline-blue" href="{{ path('movie_delete', {'id': movie.id}) }}">Usuń <i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Nie znaleziono filmów</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-outline-blue" href="{{ path('movie_new') }}">Dodaj film <i class="fa fa-plus"></i></a>
    </section>
{% endblock %}