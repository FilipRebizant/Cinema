{% extends 'base.html.twig' %}

{% block title %}Sale{% endblock %}

{% block body %}
    {% if hallList %}
        <table class="table">
            <thead>
            <th>id</th>
            <th>Numer sali</th>
            <th>Ilość miejsc</th>
            <th></th>
            </thead>

            {% for hall in hallList %}

                <tr>
                    <td>{{ hall.id }}</td>
                    <td>
                        {{ hall.getHallNumber() }}
                    </td>
                    <td>{{ hall.getSeatsNumber() }}</td>
                    <td>
                        <a href="{{ path('showHall',  {'id': hall.id} ) }}" class="btn btn-dark">Pokaż</a>
                    </td>
                </tr>

            {% endfor %}
        </table>
    {% else %}
        <p>Brak sal do wyświetlenia</p>
    {% endif %}
{% endblock %}
