{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">


    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <div class="container">
    {% if is_granted('ROLE_ADMIN') %}
        <div class="dropdown">
            <button class="dropbtn">Konto</button>
            <div class="dropdown-content">
                <a class="nav-link js-scroll-trigger" href="{{ path('fos_user_profile_edit') }}">Edytuj</a>
                <a class="nav-link js-scroll-trigger" href="{{ path('fos_user_change_password') }}">Zmień hasło</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Service</button>
            <div class="dropdown-content">
                <a class="nav-link js-scroll-trigger" href="{{ path('movie_index') }}">Filmy</a>
                <a class="nav-link js-scroll-trigger" href="{{ path('hall_index') }}">Sale</a>
                <a class="nav-link js-scroll-trigger" href="{{ path('screening_index') }}">Seanse</a>
                <a class="nav-link js-scroll-trigger" href="{{ path('reservation_index') }}">Rezerwacje</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Personel</button>
            <div class="dropdown-content">
               <a class="nav-link js-scroll-trigger" href="{{ path('admin_users') }}">Użytkownicy</a>
               <a class="nav-link js-scroll-trigger" href="{{ path('fos_user_registration_register') }}">Zarejestruj nowego użytkownika</a>
            </div>
        </div>
    {%endif%}
    </div>
    

</div>
